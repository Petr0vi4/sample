	"item": [
		{
			"name": "регистрация",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "0e21b451-3bd3-4eba-a509-1189d94d4027",
						"exec": [
							"pm.test(\"Status code is 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.collectionVariables.set('userId', pm.response.json().id.toString());"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"id": "6a769c6c-db59-4991-adb7-20b5cec0f4fe",
						"exec": [
							"pm.collectionVariables.set(\"password\", pm.variables.replaceIn('{{$randomPassword}}'))",
							"pm.collectionVariables.set(\"email\", pm.variables.replaceIn('{{$randomEmail}}'))",
							"pm.collectionVariables.set(\"login\", pm.variables.replaceIn('{{$randomUserName}}'))",
							"pm.collectionVariables.set(\"firstName\", pm.variables.replaceIn('{{$randomFirstName}}'))",
							"pm.collectionVariables.set(\"lastName\", pm.variables.replaceIn('{{$randomLastName}}'))"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"username\": \"{{login}}\", \n\t\"password\": \"{{password}}\",\n\t\"first_name\": \"{{firstName}}\",\n\t\"last_name\": \"{{lastName}}\",\n\t\"email\": \"{{email}}\"\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/register",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"register"
					]
				}
			},
			"response": []
		},
		{
			"name": "логин",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "3888262b-2eb1-42a7-8876-d30fbd04912a",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response contains a session_id cookie\", function() {",
							"    pm.expect(pm.cookies.has('session_id')).to.be.true;",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\"username\": \"{{login}}\", \"password\": \"{{password}}\"}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "проверить данные о пользователе ",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "1b5a8260-4fdd-4f1f-95ba-367d1c918854",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response headers contains user values\", function () {",
							"    pm.response.to.have.status(200);",
							"    pm.response.to.be.header(\"X-UserId\", pm.collectionVariables.get(\"userId\"));",
							"    pm.response.to.be.header(\"X-User\", pm.collectionVariables.get(\"login\"));",
							"    pm.response.to.be.header(\"X-First-Name\", pm.collectionVariables.get(\"firstName\"));",
							"pm.response.to.be.header(\"X-Last-Name\", pm.collectionVariables.get(\"lastName\"));",
							"    pm.response.to.be.header(\"X-Email\", pm.collectionVariables.get(\"email\"));",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{IDtoken}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/auth",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth"
					]
				}
			},
			"response": []
		},
		{
			"name": "получить данные о пользователе",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "45c335bc-1551-4c91-b782-15ea30d3183c",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response body contains user values\", function () {",
							"    pm.expect(pm.response.json().id).to.be.equal(pm.collectionVariables.get(\"userId\"));",
							"    pm.expect(pm.response.json().login).to.be.equal(pm.collectionVariables.get(\"login\"));",
							"    pm.expect(pm.response.json().first_name).to.be.equal(pm.collectionVariables.get(\"firstName\"));",
							"    pm.expect(pm.response.json().last_name).to.be.equal(pm.collectionVariables.get(\"lastName\"));",
							"    pm.expect(pm.response.json().email).to.be.equal(pm.collectionVariables.get(\"email\"));",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/user/me",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"user",
						"me"
					]
				}
			},
			"response": []
		},
		{
			"name": "логаут",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "c4e2184b-881d-4b93-98e3-869e1f972f64",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response not contains a session_id cookie\", function() {",
							"    pm.expect(pm.cookies.has('session_id')).to.be.false;",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
